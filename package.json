{
	"activationEvents": [
		"onLanguage:python",
		"workspaceContains:.pylintrc",
		"workspaceContains:*.py"
	],
	"capabilities": {
		"virtualWorkspaces": {
			"description": "Virtual Workspaces are not supported with pylint.",
			"supported": false
		}
	},
	"contributes": {
		"commands": [
			{
				"category": "Pylint",
				"command": "pylint.restart",
				"title": "%command.restartServer%"
			}
		],
		"configuration": {
			"properties": {
				"pylint.args": {
					"default": [],
					"items": {
						"type": "string"
					},
					"markdownDescription": "%settings.args.description%",
					"scope": "resource",
					"type": "array"
				},
				"pylint.cwd": {
					"default": "${workspaceFolder}",
					"examples": [
						"${workspaceFolder}/src",
						"${fileDirname}"
					],
					"markdownDescription": "%settings.cwd.description%",
					"scope": "resource",
					"type": "string"
				},
				"pylint.enabled": {
					"default": true,
					"markdownDescription": "%settings.enabled.description%",
					"scope": "resource",
					"type": "boolean"
				},
				"pylint.ignorePatterns": {
					"default": [],
					"examples": [
						[
							"**/site-packages/**/*.py",
							".vscode/*.py"
						]
					],
					"items": {
						"type": "string"
					},
					"markdownDescription": "%settings.ignorePatterns.description%",
					"scope": "resource",
					"type": "array",
					"uniqueItems": true
				},
				"pylint.importStrategy": {
					"default": "useBundled",
					"enum": [
						"useBundled",
						"fromEnvironment"
					],
					"enumDescriptions": [
						"%settings.importStrategy.useBundled.description%",
						"%settings.importStrategy.fromEnvironment.description%"
					],
					"markdownDescription": "%settings.importStrategy.description%",
					"scope": "resource",
					"type": "string"
				},
				"pylint.interpreter": {
					"default": [],
					"items": {
						"type": "string"
					},
					"markdownDescription": "%settings.interpreter.description%",
					"scope": "resource",
					"type": "array"
				},
				"pylint.lintOnChange": {
					"default": false,
					"markdownDescription": "%settings.lintOnChange.description%",
					"scope": "machine",
					"tags": [
						"experimental"
					],
					"type": "boolean"
				},
				"pylint.path": {
					"default": [],
					"examples": [
						[
							"~/global_env/pylint"
						],
						[
							"~/.env/python",
							"-m",
							"pylint"
						]
					],
					"items": {
						"type": "string"
					},
					"markdownDescription": "%settings.path.description%",
					"scope": "resource",
					"type": "array"
				},
				"pylint.severity": {
					"additionalProperties": {
						"enum": [
							"Error",
							"Hint",
							"Information",
							"Warning"
						],
						"type": "string"
					},
					"default": {
						"convention": "Information",
						"error": "Error",
						"fatal": "Error",
						"info": "Information",
						"refactor": "Hint",
						"warning": "Warning"
					},
					"markdownDescription": "%settings.severity.description%",
					"scope": "resource",
					"type": "object"
				},
				"pylint.showNotifications": {
					"default": "off",
					"enum": [
						"off",
						"onError",
						"onWarning",
						"always"
					],
					"enumDescriptions": [
						"%settings.showNotifications.off.description%",
						"%settings.showNotifications.onError.description%",
						"%settings.showNotifications.onWarning.description%",
						"%settings.showNotifications.always.description%"
					],
					"markdownDescription": "%settings.showNotifications.description%",
					"scope": "machine",
					"type": "string"
				}
			}
		},
		"languages": [
			{
				"filenames": [
					".pylintrc"
				],
				"id": "ini"
			}
		]
	},
	"dependencies": {
		"@vscode/python-extension": "^1.0.5",
		"fs-extra": "^11.2.0",
		"vscode-languageclient": "^8.1.0"
	},
	"description": "%extension.description%",
	"devDependencies": {
		"@types/chai": "^4.3.12",
		"@types/fs-extra": "^11.0.4",
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "16.x",
		"@types/sinon": "^17.0.3",
		"@types/vscode": "^1.74.0",
		"@vscode/test-electron": "^2.3.9",
		"@vscode/vsce": "^2.24.0",
		"chai": "^4.3.10",
		"glob": "^10.3.10",
		"mocha": "^10.3.0",
		"sinon": "^17.0.1",
		"ts-loader": "^9.5.1",
		"typemoq": "^2.1.0",
		"typescript": "^5.4.2",
		"typescript-esbuild": "0.4.5",
		"webpack": "^5.90.3",
		"webpack-cli": "^5.1.4"
	},
	"displayName": "Pylint",
	"extensionDependencies": [
		"ms-python.python"
	],
	"galleryBanner": {
		"color": "#1e415e",
		"theme": "dark"
	},
	"icon": "icon.png",
	"l10n": "./l10n",
	"main": "./dist/extension.js",
	"name": "pylint",
	"preview": true,
	"scripts": {
		"compile": "webpack",
		"compile-tests": "tsc -p . --outDir out",
		"package": "webpack --mode production --devtool source-map --config ./webpack.config.js",
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'",
		"tests": "node ./out/test/ts_tests/runTest.js",
		"vsce-package": "vsce package -o pylint.vsix",
		"vscode:prepublish": "npm run package",
		"watch": "webpack --watch",
		"watch-tests": "tsc -p . -w --outDir out"
	},
	"serverInfo": {
		"module": "pylint",
		"name": "Pylint"
	},
	"type": "module"
}
